{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "scss",
    "json",
    "jsonc",
    "python",
    "html"
  ],
  "javascript.showUnused": false,
  "typescript.showUnused": false,
  "python.formatting.provider": "black",
  "pyright.organizeimports.provider": "isort",
  "python.sortImports.path": "~/.local/bin/isort",
  "python.sortImports.args": [
    "--profile=black"
  ],
  "coc.preferences.willSaveHandlerTimeout": 1000,
  "prettier.disableLanguages": [
    "python"
  ],
  "prettier.requireConfig": true,
  "prettier.onlyUseLocalVersion": false,
  "git.signPriority": 5,
  "php-cs-fixer.rules": "@PSR12,ordered_imports,no_unused_imports",
  "yaml.schemas": {
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": "**/docker-compose*.yml"
  },
  "languageserver": {
    "csharp-ls": {
      "command": "csharp-ls",
      "filetypes": ["cs"],
      "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
    }
  },
  "Lua.telemetry.enable": true,
  "sumneko-lua.enableNvimLuaDev": true,
  "Lua.format.enable": true,
  "Lua.format.defaultConfig": {
    "indent_style": "space",
    "indent_size": 4
  },
  "Lua.diagnostics.neededFileStatus": {
    "codestyle-check": "Opened"
  },
  "Lua.diagnostics.globals": ["awesome", "client", "screen", "root"]
}
